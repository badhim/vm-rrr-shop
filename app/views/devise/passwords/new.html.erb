<%= render "layouts/flatform-header" %>         
  <h2 class="pb-3">Forgot your password?</h2>

  <%= render "devise/shared/error_messages", resource: resource, class: "alert mb-3" %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3 w-100" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-100 my-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<%= render "layouts/flatform-footer" %>